    <RelativeLayout
        android:id="@+id/city_search_rela"
        android:layout_height="45.0dp"
        android:layout_width="fill_parent">
        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_toLeftOf="@+id/city_search_button_rela">
            <EditText
                android:id="@+id/city_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/search_city"
                android:hint="   搜索全国城市(中文)"
                android:paddingLeft="35.0dp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
            </EditText>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/city_search_button_rela"
            android:layout_width="80.0dp"
            android:layout_height="45.0dp"

            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/city_search_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/search_button" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/city_search_rela">
        <ListView
            android:id="@+id/title_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </RelativeLayout>
</RelativeLayout>